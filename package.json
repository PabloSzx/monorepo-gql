{
  "name": "monorepo-gql",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/PabloSzx/monorepo-gql#readme",
  "bugs": {
    "url": "https://github.com/PabloSzx/monorepo-gql/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PabloSzx/monorepo-gql.git"
  },
  "license": "MIT",
  "author": "PabloSz",
  "main": "null",
  "scripts": {
    "build": "pnpm build --recursive --stream",
    "dev": "cross-env-shell NODE_ENV=development \"pnpm build --recursive --filter graphql-gen --filter common && dotenv -- pnpm dev --recursive --no-bail --no-sort --stream\"",
    "preinstall": "npx only-allow pnpm",
    "prettier": "pretty-quick",
    "start": "cross-env NODE_ENV=production dotenv -- pnpm start --recrusive --no-sort --no-bail --stream",
    "test": "dotenv -- pnpm test --recursive --no-sort --no-bail",
    "update-deps": "pnpm update --recursive --interactive --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=14.14.0 <15",
    "pnpm": ">=5.10.1"
  }
}
