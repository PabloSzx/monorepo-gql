/**
 * This is the main configuration file for Rush.
 * For full documentation, please see https://rushjs.io
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.34.4",
  "pnpmVersion": "5.10.1",
  "pnpmOptions": {
    "pnpmStore": "global",
    "resolutionStrategy": "fast",
    "useWorkspaces": false
  },
  "nodeSupportedVersionRange": ">=14.14.0 <15",
  "suppressNodeLtsWarning": true,
  "repository": {
    "url": "https://github.com/PabloSzx/monorepo-gql",
    "defaultBranch": "main",
    "defaultRemote": "origin"
  },
  "telemetryEnabled": true,
  "projects": [
    {
      "packageName": "gateway",
      "projectFolder": "packages/gateway"
    },
    {
      "packageName": "graphql-gen",
      "projectFolder": "packages/graphql-gen"
    },
    {
      "packageName": "auth-service",
      "projectFolder": "packages/auth-service"
    },
    {
      "packageName": "common",
      "projectFolder": "packages/common"
    }
  ]
}
